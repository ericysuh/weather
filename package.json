{
  "name": "react-redux-starter",
  "version": "1.0.0",
  "description": "Customized starte app for react + redux",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode=development",
    "build": "rm -rf ./dist && webpack --mode production --progress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericysuh/react-redux-starter.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ericysuh/react-redux-starter/issues"
  },
  "homepage": "https://github.com/ericysuh/react-redux-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "sass-resources-loader": "^2.0.3",
    "stylelint": "^13.3.3",
    "stylelint-scss": "^3.17.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "browserslist": [
    "last 1 version",
    "> 5%"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/react"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.6",
    "autoprefixer": "^9.7.6",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --no-stash -q"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.scss": "stylelint"
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "ignorePatterns": [
      "node_modules/"
    ],
    "rules": {
      "comma-dangle": 0,
      "no-shadow": 0,
      "react/no-unescaped-entities": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/jsx-props-no-spreading": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ]
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "indentation": 2,
      "max-nesting-depth": 3,
      "at-rule-no-unknown": null,
      "scss/media-feature-value-dollar-variable": null
    }
  }
}
